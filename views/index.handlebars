<h1>CHOMP CHOMP BURGER!</h1>

<h2> IT'S CHOMPING TIME!</h2>

<ul>
  {{#each burgers}}
  {{#unless devour}}
  {{> burgers/burger-block devoured=true}}
  {{/unless}}
  {{/each}}
</ul>

<h2>Burgers You CHOMPED</h2>

<ul>
  {{#each burgers}}
  {{#if devour}}
  {{> burgers/burger-block devoured=false}}
  {{/if}}
  {{/each}}
</ul>

<h2>Add A Burger to CHOMP</h2>
<form class="add-burger">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
    <input type="hidden" name="devour" value="0">
  </div>

  <div class="form-group">
    <label for="chomp">CHOMPED??!</label><br>
    <input type="radio" name="devour" value="1" id="devoured" checked> CHOMPED<br>
    <input type="radio" name="devour" value="0" id="noeat"> No CHOMP
  </div>

  <button type="submit">Add Burger</button>
</form>